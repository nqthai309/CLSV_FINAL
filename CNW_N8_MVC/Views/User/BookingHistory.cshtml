                    <table style="width:100%; border: 1px solid black; border-collapse: collapse;">
                        <tr>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Tên khách sạn</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Địa chỉ</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Mã phòng</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Ngày đến</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Ngày về</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">D.vụ</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Tổng tiền</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Ngày Đặt</th>
                            <th style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">Trạng thái</th>
                        </tr>
                        @foreach (var it in list_history)
                        {
                            <tr>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Hotel_name</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Location_details</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Hotel_rooms_id</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.From_date.Split('T')[0]</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.To_date.Split('T')[0]</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Service_list</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Total_booking_price</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Time_booking.Split('T')[0]</td>
                                <td style=" border: 1px solid black; border-collapse: collapse; padding:5px; text-align: center">@it.Payment_status</td>
                            </tr>
                        }

                    </table>

                        <div id="divThongBao"></div>

                    </div>
                    <div class="mt-3">

                    </div>
                </div>
            </div>
        </div>
