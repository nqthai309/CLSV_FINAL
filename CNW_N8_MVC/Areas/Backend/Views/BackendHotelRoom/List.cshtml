
@using CNW_N8_MVC.Class;
@{ var list = ViewData["list"] as IEnumerable<BE_ItemHotelRoom>;}
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Backend/Views/Shared/Backend.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách Phòng Khách Sạn</div>
            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>M.số phòng</th>
                            <th>Mã khách sạn</th>
                            <th>Diện tích</th>
                            <th>Tầng</th>
                            <th>người/phòng</th>
                            <th>giường</th>
                            <th>giá</th>
                            <th>giá khuyến mãi</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var it in list)
                        {
                            <tr>
                                <td>@it.Hotel_rooms_id</td>
                                <td>@it.Hotel_name</td>
                                <td>@it.Acreage m2</td>
                                <td>tầng @it.Floors</td>
                                <td>@it.Limit_people người</td>
                                <td>@it.Bed_count giường</td>
                                <td>@it.Price</td>
                                <td>@it.Sell_price</td>

                                <td><a href="@Url.Action("Edit","BackendHotelRoom", new {@hotel_id = it.Hotel_id, @hotel_rooms_id = it.Hotel_rooms_id})">Sửa</a></td>
                                <td><a style="color:red" href="@Url.Action("DeleteHotelRoom","BackendHotelRoom",new {@hotel_id = it.Hotel_id, @hotel_rooms_id = it.Hotel_rooms_id})">Xoá</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

