
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Backend/Views/Shared/Backend.cshtml";
}

@using CNW_N8_MVC.Class;
@model List<CNW_N8_MVC.Class.Discount>

<form>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách ưu đãi</div>
                <div class="card-body">
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Mã ưu đãi</th>
                                <th>Giá trị</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Discount it in Model)
                            {
                                <tr>
                                    <td>@it.Discount_id</td>
                                    <td>@it.Discount_value%</td>
                                    <td><a href="@Url.Action("Edit","BackendDiscount", new {@id = it.Discount_id})">Sửa</a></td>
                                    <td><a style="color:red" href="@Url.Action("DeleteDiscount","BackendDiscount",new {@id = it.Discount_id})">Xoá</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</form>